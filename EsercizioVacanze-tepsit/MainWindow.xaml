<Window x:Class="EsercizioVacanze_tepsit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EsercizioVacanze_tepsit"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtnumero" HorizontalAlignment="Left" Height="70" Margin="10,131,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="367" FontSize="36"/>
        <Label Content="Selezionare il tipo di numero:" HorizontalAlignment="Left" Height="70" Margin="10,10,0,0" VerticalAlignment="Top" Width="334" FontSize="24"/>
        <Button x:Name="btncalcola" Content="Calcola" HorizontalAlignment="Left" Height="76" Margin="431,125,0,0" VerticalAlignment="Top" Width="315" FontSize="48" Click="btncalcola_Click"/>
        <ComboBox Name="cmbnumero" HorizontalAlignment="Left" Height="70" Margin="431,10,0,0" VerticalAlignment="Top" Width="315">
            <ComboBoxItem FontSize="24">Decimale</ComboBoxItem>
            <ComboBoxItem FontSize="24">Binario</ComboBoxItem>
        </ComboBox>
        <TextBox x:Name="txtresult" HorizontalAlignment="Left" Height="90" Margin="165,279,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="400" FontSize="24"/>

    </Grid>
</Window>
